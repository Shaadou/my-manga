{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}

<style>

.contact-form .form-control{
    border-radius:1rem;
}
.contact-image{
    text-align: center;
}
.contact-image img{
    width: 30%;
    margin-top: -1%;

}
.contact-form form{
    padding: 14%;
}
.contact-form form .row{
    margin-bottom: -7%;
}
.contact-form h3{
    margin-bottom: 8%;
    margin-top: -17%;
    text-align: center;
    color: #0062cc;
}
.contact-form .btnContact {
  
    border: none;
    border-radius: 1rem;
    padding: 1.9%;
    background: #fa2e59;
    font-weight: 600;
    color: #fff;
    cursor: pointer;
    margin-left: 20px;
}
.btnContactSubmit
{
    width: 50%;
    border-radius: 1rem;
    padding: 1.5%;
    color: #fff;
    background-color: #0062cc;
    border: none;
    cursor: pointer;
}

</style>

    <div class="container contact-form">
                <div class="contact-image">
                    <img src="{{ asset('build/logo_large.png') }}" alt="rocket_contact"/>
                </div>
                <form method="post">
                    <h3 class="white">Envoyer un message</h3>
                   <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" name="txtName" class="form-control" placeholder="Votre nom" value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="txtEmail" class="form-control" placeholder="@" value="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="txtPhone" class="form-control" placeholder="Votre numéro de téléphone" value="" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea name="txtMsg" class="form-control" placeholder="Description" style="width: 100%; height: 150px;"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="btnSubmit" class="btnContact" value="Envoyer le message" />
                        </div>
                    </div>
                </form>
    </div>
{% endblock %}
