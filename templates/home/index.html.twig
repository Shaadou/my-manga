{% extends 'base.html.twig' %}

{% block title %} SNS Accueil {% endblock %}

{% block body %}

<main>

  <div class="call-to-action text-center my-4 position">
    <h4 class="mb-4 blanc">TENDANCES DU MOMENT</h4>
  </div>

  <hr>

  <div id="carouselExampleIndicators" class="carousel slide essaiee" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{ asset('build/6.jpg') }}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('build/8.jpg') }}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{ asset('build/5.jpg') }}" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr>

    <div class="row">


  {% for produit in produitsTendance %}
    

        <div class="col-lg-4 essaie">
<!--Card-->
          <div class="card wow fadeIn" data-wow-delay="0.2s">
<!--Card image-->
            <img class="img-fluid" src="{{ asset('uploads/images/products/' ~ produit.image ) }}" alt="Card image cap">
<!--Card content-->
              <div class="card-body">
<!--Title-->
                <h4 class="card-title">L'attaque des titans</h4>
<!--Text-->
                  <a href="{{ path('panier_add', { 'idProduit' : produit.id }) }}" class="btn btn-info">Acheter</a>
                  <a href="{{ path('info', { 'id': produit.id }) }}" class="btn btn-info">Infos</a>
              </div>
          </div>
        </div>

  {% endfor %}


<!--/.Card-->
    </div>

</main>




{% endblock %}
