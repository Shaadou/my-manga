{% extends 'base.html.twig' %}

{% block title %}Mangas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<article>
    <div class="d-flex">
        <div class="row">
                <div class="col-auto me-auto">
                    <div class="list-group text-center" id="list-tab" role="tablist">
                    {% for categorie in categories %}
                        <a class="list-group-item list-group-item-action" id="list-a-list" href="{{ path('list_manga', { 'categorie' : categorie.id }) }}" role="tab" aria-controls="action">{{ categorie.nom }}</a>
                    {% endfor %}
                    </div>
                </div>
        </div>
       
            <div class="container">
                <div class="row">
                    {% for produit in produits %}
                        <div class="col-md-3 mt-3">

                            <!--Card-->
                            <div class="card wow fadeIn" data-wow-delay="0.2s">
                                <!--Card image-->
                                <img class="img-fluid" src="{{ asset('uploads/images/products/' ~ produit.image ) }}" alt="Card image cap">
                                    <!--Card content-->
                                    <div class="card-body">
                                        <!--Title-->
                                        <h4 class="card-title">{{ produit.titre }}</h4>
                                            <!--Text-->
                                            <p class="card-text"></p>
                                                <a href="{{ path('panier_add', { 'idProduit' : produit.id }) }}" class="btn btn-info">Acheter</a>
                                                <a href="{{ path('info', { 'id': produit.id }) }}" class="btn btn-info">Infos</a>
                                    </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>    
  </div> 

</article>


<script src="./js/app.js">
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>


{% endblock %}